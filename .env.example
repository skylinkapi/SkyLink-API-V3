# SkyLink API v3 Environment Configuration

# ── API Configuration ────────────────────────────────────
API_VERSION=3.0.0
API_TITLE=SkyLink API
API_DESCRIPTION=Professional aviation data service
DEBUG=False

# ── Authentication ───────────────────────────────────────
X_API_KEY=your-secret-api-key-here
X_RAPIDAPI_PROXY_SECRET=your-rapidapi-secret-here

# ── Server Configuration ────────────────────────────────
HOST=0.0.0.0
PORT=8000

# ── CORS Configuration ──────────────────────────────────
ALLOWED_ORIGINS=*
ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
ALLOWED_HEADERS=*

# ── Rate Limiting (requests per minute) ──────────────────
RATE_LIMIT=100

# ── Logging ──────────────────────────────────────────────
LOG_LEVEL=INFO
LOG_FORMAT=json

# ── Cache Configuration ─────────────────────────────────
REDIS_URL=redis://localhost:6379/0
CHART_CACHE_TTL=86400
WEATHER_CACHE_TTL=900
NOTAM_CACHE_TTL=900

# ── Database ─────────────────────────────────────────────
DATABASE_URL=sqlite:///./skylink_v3.db

# ── ML Models ────────────────────────────────────────────
ML_MODELS_PATH=./ml_models
ENABLE_ML_PREDICTIONS=true

# ── FAA SWIM FNS (NOTAMs via Solace) ─────────────────────
